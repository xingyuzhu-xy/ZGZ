<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/my_message_cpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpname"
        android:textColor="@color/font_black1"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_message_cpname"
        android:text="时间:"
        android:textSize="12sp"
        android:textColor="@color/font_black1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/my_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_message_cpname"
        android:layout_toRightOf="@id/time"
        android:text="@string/time"
        android:textSize="12sp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/font_black1"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地点:"
        android:layout_below="@id/time"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textColor="@color/font_black1"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/my_message_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/site"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/font_black1"
        android:layout_toRightOf="@id/site"
        android:layout_alignTop="@id/site"
        android:layout_marginLeft="3dp"/>
    <Button
        android:id="@+id/message_agree"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="同意"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:background="@drawable/deliver_button1"
        />
</RelativeLayout>
