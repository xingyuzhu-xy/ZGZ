<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="13sp"
        android:textColor="@color/font_black1"
        android:background="@color/deliver_grey"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/deliver_cpname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpname"
            android:textSize="14sp"
            android:textColor="@color/font_black1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/zhiwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位:"
            android:textColor="@color/font_grey1"
            android:textSize="12sp"
            android:layout_below="@id/deliver_cpname"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/deliver_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/design_director"
            android:textColor="@color/font_grey1"
            android:textSize="12sp"
            android:layout_below="@id/deliver_cpname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/zhiwei"/>
        <TextView
            android:id="@+id/deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhiwei"
            android:text="@string/time"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/font_grey1"
            android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投递简历"
            android:textSize="12sp"
            android:textColor="@color/font_grey1"
            android:layout_toRightOf="@id/deliver_time"
            android:layout_alignTop="@id/deliver_time"
            android:layout_marginLeft="3dp"/>
        <Button
            android:id="@+id/remind_HR"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@id/deliver_time"
            android:text="提醒HR处理"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/deliver_button1"/>
        <Button
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:text="@string/look"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:background="@drawable/deliver_button1"
            android:layout_alignTop="@id/deliver_cpname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="11dp"/>
    </RelativeLayout>
</LinearLayout>
