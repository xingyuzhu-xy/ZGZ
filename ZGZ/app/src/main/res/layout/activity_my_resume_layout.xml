<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/my_setting_blue1">
                <ImageView
                    android:id="@+id/resume_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/my_arrow_white"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/myresume"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="保存"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginRight="14dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@color/my_setting_blue2">
                <ImageView
                    android:id="@+id/headimg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/myheadimg"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:id="@+id/resume_name">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/name"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/resume_sex"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/man_or_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/arrow2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/resume_hukou"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="籍贯"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                   android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/jiguan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆渝中"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/resume_edu"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="学历"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大学本科"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_gravity="center"
                    android:layout_marginRight="14dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/resume_born"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/burn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19900910"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"/>
                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_gravity="center"
                    android:layout_marginRight="14dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/resume_good"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应聘职位"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/arrow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安卓开发工程师"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/arrow6"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resume_exp"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作经历"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/arrow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/experience"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textSize="14sp"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/arrow10"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/resume_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号码"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/binding"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/number"
                    android:textColor="@color/my_setting_blue1"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/userPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/arrow4"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/resume_emailadress"
                android:layout_width="match_parent"
                android:layout_height="41dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱地址"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_adress"
                    android:textSize="14sp"
                    android:textColor="@color/font_black1"
                    android:layout_toLeftOf="@id/arrow5"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
