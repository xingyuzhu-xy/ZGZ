<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/my_attention_cpimage"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:src="@mipmap/cpimage"/>
    <TextView
        android:id="@+id/my_attention_cpname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cpname"
        android:textColor="@color/font_black1"
        android:textSize="14sp"
        android:layout_toRightOf="@id/my_attention_cpimage"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"/>
    <TextView
        android:id="@+id/cp_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cp_introduce"
        android:textSize="12sp"
        android:textColor="@color/font_black1"
        android:layout_alignBottom="@+id/my_attention_cpimage"
        android:layout_alignLeft="@+id/my_attention_cpname"
        android:layout_alignStart="@+id/my_attention_cpname" />
    <Button
        android:id="@+id/cancel_attention"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:text="@string/cancel_attention"
        android:textSize="12sp"
        android:background="@drawable/attention_button"
        android:textColor="@color/my_setting_blue1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
