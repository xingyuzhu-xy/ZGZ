<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/my_setting_blue1">
        <ImageView
            android:id="@+id/refer_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/my_arrow_white"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询企业"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/refer_cp"
            android:layout_margin="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cpname"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/font_black1"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/refer_cp_edittext"
        android:hint="请输入你要咨询的问题..."
        android:textSize="12sp"
        android:textColorHint="@color/font_grey1"
        android:gravity="start"
        android:paddingLeft="11dp"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:id="@+id/qingkong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/oval"
            android:text="x"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="清空"
            android:textColor="@color/my_setting_blue1"
            android:textSize="12sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="提交"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/deliver_button1"/>
</LinearLayout>
