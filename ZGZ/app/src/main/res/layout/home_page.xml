<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">
        <RadioButton
            android:id="@+id/homepage_radiobutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="首页"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/my_setting_blue1"/>
        <RadioButton
            android:id="@+id/positon_radiobutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="职位"
            android:button="@null"
            android:drawableTop="@drawable/selector_post"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <RadioButton
            android:id="@+id/interview_radiobutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="面试"
            android:button="@null"
            android:drawableTop="@drawable/selector_inter"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <RadioButton
            android:id="@+id/me_radiobutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="我的"
            android:button="@null"
            android:drawableTop="@drawable/selector_mine"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>

    </RadioGroup>

</LinearLayout>