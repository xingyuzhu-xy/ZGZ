<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_top_get_back"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/near_work"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vocationType"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/vocation_type"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <TextView
            android:id="@+id/position_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择行业"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="@color/blue"
            android:layout_marginRight="12sp"/>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_main_body_arrows"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/position_value"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <EditText
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/position_value_input"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColorHint="@color/gray"
            android:layout_marginRight="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_main_body_arrows"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/min_salary"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <EditText
            android:id="@+id/xinshui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/min_salary_input"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="9"
            android:textColorHint="@color/gray"
            android:layout_marginRight="12sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_main_body_arrows"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:id="@+id/linpush"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发布时间"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <TextView
            android:id="@+id/push_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginRight="12sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_main_body_arrows"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:id="@+id/linjuli"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="求职地区"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:textSize="14sp"
            android:textColor="@color/light_black"/>
        <EditText
            android:id="@+id/site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入工作的范围"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColorHint="@color/gray"
            android:layout_marginRight="12sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/advanced_list_main_body_arrows"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>
    <TextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:text="@string/search"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/t_advanced_search_button"/>
</LinearLayout>